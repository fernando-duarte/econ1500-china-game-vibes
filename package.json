{
  "name": "solow-game",
  "version": "1.0.0",
  "description": "Solow Growth Model Classroom Game",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "npm run lint && (nodemon --exec 'npm run lint:server && node server/index.js' & npm run watch:css & npm run browser-sync)",
    "lint:server": "eslint server/",
    "build:css": "sass --load-path=client/scss --no-source-map --style compressed client/scss/core.scss:client/css/core.css client/scss/components.scss:client/css/components.css client/scss/student.scss:client/css/student.css client/scss/instructor.scss:client/css/instructor.css client/scss/screen.scss:client/css/screen.css",
    "watch:css": "sass --load-path=client/scss --no-source-map --watch client/scss/core.scss:client/css/core.css client/scss/components.scss:client/css/components.css client/scss/student.scss:client/css/student.css client/scss/instructor.scss:client/css/instructor.css client/scss/screen.scss:client/css/screen.css",
    "build": "npm run lint && npm run build:css",
    "optimize:css": "node scripts/optimize-css.js",
    "browser-sync": "browser-sync start --proxy 'localhost:3001' --files 'client/**/*.html, client/**/*.css, client/**/*.js' --port 3002 --no-open --notify false --ui-port 3003",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:file-length": "node scripts/check-file-length.js",
    "prepare": "husky"
  },
  "keywords": [
    "classroom",
    "game",
    "economics",
    "solow"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "sass": "^1.87.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@modelcontextprotocol/server-filesystem": "^2025.3.28",
    "browser-sync": "^3.0.4",
    "clean-css": "^5.3.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "socket.io-client": "^4.8.1",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,css,html}": [
      "node scripts/check-file-length.js"
    ]
  }
}
